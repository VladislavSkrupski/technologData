<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="500.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="by.furniture.technologdata.controllers.MaterialDBViewController">
   <children>
      <HBox alignment="CENTER">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <Button fx:id="editInExcelButton" onAction="#onEditInExcelButtonClick" mnemonicParsing="false" text="Редактировать в EXCEL">
            <HBox.margin>
               <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin>
         </Button>
         <Button minWidth="75.0" mnemonicParsing="false" prefWidth="75.0" text="Добавить">
            <HBox.margin>
               <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin>
            <padding>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
         </Button>
         <Button minWidth="75.0" mnemonicParsing="false" prefWidth="75.0" text="Изменить">
            <HBox.margin>
               <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin>
         </Button>
         <Button minWidth="75.0" mnemonicParsing="false" prefWidth="75.0" text="Удалить">
            <HBox.margin>
               <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin>
         </Button>
      </HBox>
      <TextField promptText="Фильтр по наименованию">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
         </VBox.margin>
      </TextField>
      <TableView fx:id="materialDBTableView" editable="true" prefHeight="200.0" prefWidth="200.0" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS" />
      <HBox alignment="CENTER_RIGHT" maxHeight="40.0" minWidth="40.0" prefHeight="40.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <children>
            <Button minWidth="75.0" mnemonicParsing="false" text="OK">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="cancelButton" minWidth="75.0" mnemonicParsing="false" onAction="#onCancelButtonClick" text="Отмена">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
