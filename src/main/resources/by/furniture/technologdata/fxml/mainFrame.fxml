<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="by.furniture.technologdata.controllers.MainFrameController">
    <MenuBar prefHeight="35.0" VBox.vgrow="NEVER">
        <Menu mnemonicParsing="false" style="-fx-alignment: CENTER; -fx-font-size: 14px" text="Файл">
            <MenuItem fx:id="openFile" mnemonicParsing="false" onAction="#onOpenFile"
                      style="-fx-pref-width: 100px; -fx-font-size: 14px" text="Открыть"/>
            <MenuItem mnemonicParsing="false" onAction="#onExitClick" style="-fx-pref-width: 100px; -fx-font-size: 14px"
                      text="Выход"/>
        </Menu>
    </MenuBar>

    <SplitPane dividerPositions="0.29797979797979796" prefHeight="160.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
        <VBox prefHeight="515.0" prefWidth="350.0">
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="155.0" minWidth="10.0" prefWidth="115.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="261.0" minWidth="10.0" prefWidth="149.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <Label text="Заказ:" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <Label text="Наименование:" GridPane.rowIndex="1">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <Label text="Артикул:" GridPane.rowIndex="2">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <Label text="Конструктор:" GridPane.rowIndex="3">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <Label fx:id="productOrderLabel" GridPane.columnIndex="1"/>
                <Label fx:id="productNominationLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Label fx:id="productArticleLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Label fx:id="productDeveloperLabel" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            </GridPane>
            <VBox fx:id="materialCheckList" fillWidth="false" prefHeight="397.0" prefWidth="350.0">

            </VBox>
            <Button fx:id="detailsButton" alignment="CENTER" contentDisplay="CENTER" disable="true"
                    mnemonicParsing="false" onAction="#onDetailsShow" prefHeight="25.0" prefWidth="700.0"
                    text="Детально" textAlignment="CENTER">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </Button>
            <Button fx:id="productionCardButton" onAction="#onProductionCardClick" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="25.0"
                    prefWidth="700.0" text="Производственная таблица" VBox.vgrow="ALWAYS" disable="true">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </Button>
        </VBox>
        <TableView fx:id="technologTable" editable="true" prefHeight="476.0" prefWidth="350.0"
                   tableMenuButtonVisible="true"/>
    </SplitPane>
    <HBox alignment="TOP_RIGHT" prefHeight="50.0" prefWidth="200.0" spacing="10.0">
        <VBox.margin>
            <Insets/>
        </VBox.margin>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onOpenFile"
                prefHeight="35.0" prefWidth="100.0" text="Импорт" HBox.hgrow="ALWAYS"/>
        <Button fx:id="exportButton" alignment="CENTER" contentDisplay="CENTER" disable="true" mnemonicParsing="false"
                onAction="#onExportToXLS" prefHeight="35.0" prefWidth="100.0" text="Экспорт" HBox.hgrow="ALWAYS"/>
        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onExitClick"
                prefHeight="35.0" prefWidth="100.0" text="Выход" HBox.hgrow="ALWAYS"/>
    </HBox>
</VBox>
